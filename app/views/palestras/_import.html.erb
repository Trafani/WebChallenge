<div class="center-content">
  <%= form_with(model: @palestra, url: api_upload_file_path, multipart: true) do |form| %>
  <div class="form-group">
    <%= form.label :arquivo, 'Selecione um arquivo (txt)', class: 'form-label' %>
    <%= form.file_field :arquivo, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Enviar', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>